                <row id="rowCreateRoom">
                    <label value="Sala de Juego"></label>
                    <textbox id="txtGameRoom" style="width:160px;"
                        constraint="no empty" />
                </row>
                <row id="rowJoinRoom">
                    <label value="Sala de Juego"></label>
                    <combobox id="cmbGameRoom"/>
                </row>
            </rows>
        </grid>
        <hbox>
            <button id="btnLogin" label="Entrar" />
            <button id="btnBack" label="AtrÃ¡s" />
        </hbox>
    </vbox>
</vbox>
</window>
